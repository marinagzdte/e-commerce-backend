{{#if products.length}}
<br>
<h1>Productos disponibles</h1>
<table class="table table-borderless">
    <thead>
        <tr>
            <th colspan="2" scope="col">Nombre</th>
            <th colspan="2" scope="col">Precio</th>
            <th colspan="2" scope="col">Producto</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td colspan="2">{{this.title}}</td>
            <td colspan="2">{{this.price}}</td>
            <td colspan="2"><img src="{{{this.thumbnail}}}" class="img-fluid" alt="..."></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<h3>No hay productos</h3>
{{/if}}