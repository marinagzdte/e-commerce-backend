<script src="./../js/login.js" defer></script>

<h1>Login</h1>
<form name="login-form" action="/login" method="post">
    <div class="form-group mb-3">
        <label class="form-label">Ingrese su correo electrónico</label>
        <input id="login-email" type="text" class="form-control" name="username">
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Ingrese su contraseña</label>
        <input id="login-password" type="password" class="form-control" name="password">
    </div>
    <div class="button-div">
        <button type="submit" class="btn btn-primary" disabled="disabled">Entrar</button>
        <button type="submit" class="btn btn-primary" onclick="location.href = '/register'; return false;">Crear un
            usuario</button>
    </div>
</form>